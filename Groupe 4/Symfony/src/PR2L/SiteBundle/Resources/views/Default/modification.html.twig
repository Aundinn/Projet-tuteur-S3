{% extends "::layout.html.twig" %}

{% block title %}{{ parent() }} - Modification de mot de passe{% endblock %}

{% block body %}

    <table>
        <tr><th>Nom</th><th>Pr√©nom</th><th>Identifiant</th></tr>
        {% for advert in listAdverts %}
        <tr>
            <td>{{ advert.getNom() }}</td>
            <td>{{ advert.getPrenom() }}</td>
            <td>{{ advert.getUsername() }}</td>
        </tr>
        {% endfor %}
    </table>

    <div class="formulaire">
        <form method="post" action="#" {{ form_enctype(form) }}>
            {{ form_widget(form) }}
