{% extends "::layout.html.twig" %}

{% block title %}{{ parent() }} - Création{% endblock %}

{% block body %}

<h3>Formulaire de création d'un utilisateur</h3>
    
    <div class="formulaire">
        <form method="post" action="#" {{ form_enctype(form) }}>
        {{ form_widget(form) }}
            <input type="submit"/>
        </form>
    </div>

    {% for flashMessage in app.session.flashbag.get('phrase') %}
        <div>
            {{ flashMessage }}
        </div>
    {% endfor %}

{% endblock %}
